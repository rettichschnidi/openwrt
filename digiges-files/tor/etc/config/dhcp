config dnsmasq 'dhcpd'
	option port '0'
	option nonwildcard '1'

config dnsmasq 'dns'
	option port '53'
	option nonwildcard '1'

config dhcp 'wifi'
	option interface 'wifi'
	option instance 'dhcpd'
	option start '100'
	option limit '210'
	option leasetime '1h'
	option dhcpv6 'disabled'
	option ra 'server'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'

config dhcp 'lan'
	option interface 'lan'
	option ignore '1'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

